{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../Release/${fileBasenameNoExtension}",
                "-I/opt/homebrew/include",          // Include path for header files
                "-L/opt/homebrew/lib",             // Library path for linked libraries
                "-lfmt"                 // Link with specific library, e.g., fmt -> "-lfmt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
